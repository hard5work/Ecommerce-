        {
            ider = userid.get(SessionManager.KEY_USERID);
            String lint = "favlist/favoritelist.php";
            requestQueue = Volley.newRequestQueue(Objects.<Context>requireNonNull(mCtx));
            StringRequest stringRequest = new StringRequest(Request.Method.POST,InternetUrl.ServiceTYpe.URL + lint, new Response.Listener<String>() {
                @Override
                public void onResponse(String response) {

                    try {
                        JSONObject obj1 = new JSONObject(response);
                        favv = obj1.getString("favorite");
                        //   Toast.makeText(FullImageActivity.this, favv, Toast.LENGTH_SHORT).show();

                        if (favv != "null") {
                            holder.unfav.setVisibility(View.VISIBLE);
                            holder.fav.setVisibility(View.GONE);

                        }
                        if (favv == "null"){
                            holder.unfav.setVisibility(View.GONE);
                            holder.fav.setVisibility(View.VISIBLE);

                        }

                    } catch (JSONException e) {
                        e.printStackTrace();
                    }
                }
            }, new Response.ErrorListener() {
                @Override
                public void onErrorResponse(VolleyError error) {
                    error.getMessage();
                  /*  if(Alerter.isShowing()){
                        Alerter.hide();
                    }

                    Alerter.create((Activity) mCtx)
                            .setTitle("No favlist")
                            .setText("favorite list not available")
                            .setBackgroundColorRes(R.color.colorPrimaryDark)
                            .setDuration(2000)
                            .enableSwipeToDismiss()
                            .enableIconPulse(true)
                            .show();*/
                }
            }){
                @Override
                protected Map<String, String> getParams() throws AuthFailureError {
                    Map<String, String> params = new HashMap<>();
                    params.put("userid",ider);
                    params.put("productid" , String.valueOf(product.getId()));
                    return params;
                }
            };

            requestQueue.add(stringRequest);


        }


        //check for product added to cart or no
        {
            ider = userid.get(SessionManager.KEY_USERID);
            String lint = "cartliststuff/cartlist.php";
            requestQueue = Volley.newRequestQueue(Objects.<Context>requireNonNull(mCtx));
            StringRequest stringRequest = new StringRequest(Request.Method.POST,InternetUrl.ServiceTYpe.URL + lint, new Response.Listener<String>() {
                @Override
                public void onResponse(String response) {

                    try {
                        JSONObject obj1 = new JSONObject(response);
                        cartid = obj1.getString("id");
                        //   Toast.makeText(FullImageActivity.this, favv, Toast.LENGTH_SHORT).show();

                        if (cartid != "null") {
                            holder.btnaddedtocart.setVisibility(View.VISIBLE);
                            holder.btnAddToCart.setVisibility(View.GONE);
                        }

                        if (cartid == "null"){
                            holder.btnaddedtocart.setVisibility(View.GONE);
                            holder.btnAddToCart.setVisibility(View.VISIBLE);

                        }

                    } catch (JSONException e) {
                        e.printStackTrace();
                    }
                }
            }, new Response.ErrorListener() {
                @Override
                public void onErrorResponse(VolleyError error) {
                    error.getMessage();
                  /*  if(Alerter.isShowing()){
                        Alerter.hide();
                    }

                    Alerter.create((Activity) mCtx)
                            .setTitle("No favlist")
                            .setText("favorite list not available")
                            .setBackgroundColorRes(R.color.colorPrimaryDark)
                            .setDuration(2000)
                            .enableSwipeToDismiss()
                            .enableIconPulse(true)
                            .show();*/
                }
            }){
                @Override
                protected Map<String, String> getParams() throws AuthFailureError {
                    Map<String, String> params = new HashMap<>();
                    params.put("userid",ider);
                    params.put("productid" , String.valueOf(product.getId()));
                    return params;
                }
            };

            requestQueue.add(stringRequest);


        }



