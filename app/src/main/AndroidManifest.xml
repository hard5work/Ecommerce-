        <activity
            android:name=".login_stuff.SignupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".image_view.CategoryActivity"
            android:label="Category"
            android:screenOrientation="portrait" />
        <activity
            android:name=".category_stuff.MensWearActivity"
            android:label="Men&apos;s Category"
